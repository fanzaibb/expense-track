    <div class="col-sm-10">
      <input type="date" class="form-control" name="date" id="date" min="2020-01-01" max="2020-12-31" value="2020-01-01">
    </div>
  </div>
  
  <div class="form-group row">
    <label for="category" class="col-sm-2 col-form-label">類別* ：</label>
    <div class="form-group col-sm-10">
      <select class="form-control" name ="category" aria-labelledby="dropdownMenuButton">
        <option>請選擇類別</option>
        <option value="house">家居物業</option>
        <option value="trans">交通工具</option>
        <option value="leisure">休閒娛樂</option>
        <option value="food">餐飲食品</option>
        <option value="others">其他</option>
      </select>
    </div>
  </div>

  <div class="form-group row">
    <label for="money" class="col-sm-2 col-form-label">金額*  ：</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="money" name="expense">
    </div>
  </div>
  
  <div class="form-group row">
    <div class="col-sm-2"></div>
