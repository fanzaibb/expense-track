<div class="container">
    <div class="dropdown">
      <button class="btn-outline-dark dropdown-toggle rounded-0" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="width: 60%;">
        類別
      </button>
      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="min-width: 60%;">
        <a class="dropdown-item" href="#">家居物業</a>
        <a class="dropdown-item" href="#">交通出行</a>
        <a class="dropdown-item" href="#">休閒娛樂</a>
        <a class="dropdown-item" href="#">餐飲食品</a>
        <a class="dropdown-item" href="#">其他</a>
      </div>
    </div>
    <div class="amount pt-4 pb-3">
        <div><p>總金額 :</p>
        </div>
        <div style='font-size: 50px; padding-left: 25%; color: rgb(218, 120, 54);'>25260</div>
    </div>
    <div class="list-groups">
      {{#each expenses}}
        <div class="list-items">
          <div class="item-contents">
            <div class="item-content">
              <div class="item-contents-front">
                <i class="fas fa-home fa-2x"></i>
                <div class="items pt-1">
                  <span>{{{this.name}}}</span>
                  <span>{{{this.date}}}</span>
                </div>
              </div>  
              <div class="p-3">
                {{{this.expense}}}
              </div> 
            </div>
            <div class="list-button p-3">
              <a href="#">修改</a>
              <a href="#">刪除</a>
            </div>   
          </div>
        </div>
      {{/each}}
      
      <div class="add-button">
        <a href="/record/new" type="submit" class="btn rounded-0 mt-3">新增支出</a>
      </div>
    </div>
  </div>

